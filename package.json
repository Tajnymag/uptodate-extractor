{
  "name": "uptodate-extractor",
  "version": "1.0.0",
  "description": "A simple webextension to extract citations from UpToDate",
  "main": "src/index.ts",
  "author": "Tajnymag <tajnymag@gmail.com>",
  "license": "MIT",
  "scripts": {
    "compile": "tsc",
    "bundle": "rollup dist/index.js --format iife --name \"uptodateExtrator\" --file dist/bundle.js",
    "zip": "web-ext build --ignore-files \"src/*\" --overwrite-dest",
    "build": "npm-run-all compile bundle zip"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.75",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "rollup": "^0.66.6",
    "typescript": "^3.1.6",
    "web-ext": "^2.9.1",
    "web-ext-types": "^3.0.0"
  }
}
